@model IEnumerable<waTallerJhaka.Models.Cotizacion>

@{
    ViewData["Title"] = "listadoCotizaciones";
    Layout = "~/Views/Shared/LayoutPrincipal.cshtml";
}

<hr />
<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <h6 class="mb-10">Lista de Cotizaciones</h6>
                <div class="table-wrapper table-responsive">
                    <table id="tabla" class="table">
                        
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ide_cot)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fec_cot)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.nom_veh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.nom_cli)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ide_cot)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fec_cot)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nom_veh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nom_cli)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Agregar Repuestos", "agregarRepuesto", new { id = item.ide_cot }, new { @class="btn btn-info"} ) |
                                        @Html.ActionLink("Agregar Servicios", "agregarServicio", new { id = item.ide_cot }, new { @class = "btn btn-info" }) |
                                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-dark" }) |
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between">
                    <select id="rowsPerPage" class="form-select w-auto mb-3">
                        <option value="5">5 por página</option>
                        <option value="10">10 por página</option>
                        <option value="20">20 por página</option>
                    </select>
                    <div id="pagination" class="d-flex justify-content-center mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>