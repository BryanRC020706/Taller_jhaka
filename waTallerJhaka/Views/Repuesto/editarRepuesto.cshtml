@model waTallerJhaka.Models.Repuesto

@{
    ViewData["Title"] = "editarRepuesto";
    Layout = "~/Views/Shared/LayoutPrincipal.cshtml";
}
<hr />
<div class="form-elements-wrapper justify-content-center">
    <div class="row">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-style mb-30">
                    <form asp-action="editarRepuesto">
                        <div asp-validation-summary="ModelOnly"></div>
                        <h1 class="text-center">EDITAR REPUESTO</h1>
                        <br />
                        <div class="input-style-1">
                            <label asp-for="ide_rep" class="control-label"></label>
                            <input asp-for="ide_rep" class="form-control" />
                            <span asp-validation-for="ide_rep" class="text-danger"></span>
                        </div>
                        <div class="input-style-1">
                            <label asp-for="nom_rep" class="control-label"></label>
                            <input asp-for="nom_rep" placeholder="@Html.DisplayNameFor(m => m.nom_rep)" />
                            <span asp-validation-for="nom_rep" class="text-danger"></span>
                        </div>

                        <div class="input-style-1">
                            <label asp-for="sto_rep" class="control-label"></label>
                            <input asp-for="sto_rep" placeholder="@Html.DisplayNameFor(m => m.sto_rep)" />
                            <span asp-validation-for="sto_rep" class="text-danger"></span>
                        </div>

                        <div class="input-style-1">
                            <label asp-for="pre_rep" class="control-label"></label>
                            <input asp-for="pre_rep" placeholder="@Html.DisplayNameFor(m => m.pre_rep)" />
                            <span asp-validation-for="pre_rep" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="GUARDAR" class="btn btn-primary mx-auto d-block" />
                        </div>
                    </form>

                    <br />

                    <div class="row justify-content-center">
                        <a asp-action="listadoRepuesto" class="main-btn active-btn rounded-full btn-hover">Regresar al Listado</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

