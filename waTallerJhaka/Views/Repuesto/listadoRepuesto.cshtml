@model IEnumerable<waTallerJhaka.Models.Repuesto>

@{
    ViewData["Title"] = "listadoRepuesto";
    Layout = "~/Views/Shared/LayoutPrincipal.cshtml";
}
<hr />
<p>
    <a asp-action="GenerarPDF" class="btn btn-primary">Generar Reporte</a>
</p>
<hr />
<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <h6 class="mb-10">Lista de Repuestos</h6>
                <div class="table-wrapper table-responsive">
                    <table id="tabla" class="table">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.ide_rep)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.nom_rep)
                                </th>
                                <th class ="text-center">
                                    @Html.DisplayNameFor(model => model.sto_rep)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.pre_rep)
                                </th>
                                <th class="text-center">ACCIONES</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.ide_rep)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.nom_rep)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.sto_rep) UND.
                                    </td>
                                    <td class="text-center">
                                        S/. @Html.DisplayFor(modelItem => item.pre_rep)
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Editar", "editarRepuesto", new { id = item.ide_rep }, new { @class = "btn btn-info" }) 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between">
                    <select id="rowsPerPage" class="form-select w-auto mb-3">
                        <option value="5">5 por página</option>
                        <option value="10">10 por página</option>
                        <option value="20">20 por página</option>
                    </select>
                    <div id="pagination" class="d-flex justify-content-center mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>